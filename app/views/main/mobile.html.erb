<div class="c-container">
    <div class="box">
        <div class="pro-pp">
            <p class="pro-p">MOBILE DEVELOPMENT</p>
        </div>
        <div class="pro-text">
            <h2 class="pro-h">Transforming Ideas Into Digital Experiences</h2>
        </div><br/>
        <div class="box-1">
        <% if @mobile_posts && @mobile_posts.any? %>
        <% @mobile_posts.each do |post| %>
            <div class="project">
                <% if post.image.attached? %>
                <%= image_tag url_for(post.image), class: "project-img"%>
                <% end %>    <br/>
                <p class="pro-p-2"><%= post.title %></p>
                <p class="pro-p1"><%= post.description%></p>
            </div>
            <% end %>
            <% end %>
        </div>
    </div>
</div>